<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to (@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><%= @book.tags %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <!--いいね-->
          <td id="favorite_buttons_<%= @book.id %>">
             <%= render 'favorites/favorite', book: @book %>
          </td>
          <!--コメント数-->
          <td>
            <p class="comment_count">コメント数:<%= @book.book_comments.count %></p>
          </td>
        </tr>
        </table>
        <!--コメント-->
        <div class="comments">
          <%= render 'book_comments/book_comment', book: @book %>
        </div>
        
      <div id="comment_form">
        <%= form_with(model: [@book, @comment], local: false) do |f| %>
          <%= f.text_area :comment, style: "width: 100%;", rows: '5', class: "comment_textarea" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
      
    </div>
  </div>
</div>