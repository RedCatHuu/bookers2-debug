<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2>New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    <div class="offset-md-1 col-md-8">
      <h2>Group Detail</h2>
      <table class="table">
        <tbody>
          <td>
            <%= image_tag @group.get_image, size: "70x70" %>
          </td>
          <td>
            <%= @group.name %>
          </td>
          <td>
            <%= @group.introduction %>
          </td>
          <% if @group.owner_id == current_user.id %>
            <td>
              <%= link_to 'edit', edit_group_path(@group), class: 'btn btn-success' %>
            </td>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>